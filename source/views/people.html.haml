#main
  .header.mennesker-hero
    %section
      %h1#hero.text-centered Vi er Iterate

  .white
    %section
      .row
        .two-thirds-layout-offset
          %h2 Teamet som gjør forskjellen
      .row
        = partial 'partials/customer-quote-single', :locals => { :customer => 'syversen' } 
   
  .cards.has-large-padding-top-bottom
  
    - employees = data.people.sort.to_h # moves data into a hash and sorts alphabetically by object key
    - employees.each do | e |
      - employee = e[1] # moves all object data into an array

      .employee-card
        .employee-basic-info
          .employee-card-header
            %img{:class => 'mugshot', :title => employee.name, :src => image_path('mugshots/' + employee.mugshot)}
            %ul.card-content.text-centered
              %li.employee-name= employee.name
              %li.employee-title= employee.title

          %ul.card-content.text-centered
            %li.contact-details
              %a{:href => 'mailto:' + employee.email}= employee.email
            %li.contact-details
              %a{:href => 'tel:' + employee.phone}= employee.phone

            %ul.horizontal-list
              - unless employee.twitter.empty?
                %li
                  %a{:href => employee.twitter, :class => 'icon'}
                    %i.fa.fa-twitter
              - unless employee.linkedin.empty?
                %li
                  %a{:href => employee.linkedin, :class => 'icon'}
                    %i.fa.fa-linkedin-square
              - unless employee.github.empty?
                %li
                  %a{:href => employee.github, :class => 'icon'}
                    %i.fa.fa-github

%section.footer
  .row.has-margin-bottom
    .logo
      = image_tag image_path('logos/iterate_logo.svg')
      %ul.has-padding-top
        %li Vi har blitt kåret til en av Norges beste arbeidsplasser seks år på rad.
      %ul.has-padding-bottom
      .customer-logo= image_tag image_path('logos/gptw_red3.jpg')


    .address
      %h5.has-padding-bottom
        Besøksadresse
      %ul
        %li Iterate AS
        %li Grensen 9B, 0159 Oslo
        %li + 47 22 44 79 18
        %li= mail_to 'mail@iterate.no'

    .social-media
      %h5.has-padding-bottom
        Følg oss
      %ul
        %li= link_to 'Twitter','https://twitter.com/iterate_no', :class => 'twitter'
        %li= link_to 'Linkedin', 'https://www.linkedin.com/company/iterate', :class => 'linkedin'
        %li= link_to 'Facebook', 'https://www.facebook.com/iteratenorge', :class => 'facebook'
        %li= link_to 'Instagram', 'http://instagram.com/iterate_no', :class => 'instagram'

    .blog
      %h5.has-padding-bottom
        Det siste fra bloggen

      %ul.blog-list
        %li
          = link_to 'Les flere', 'http://blog.iterate.no/'

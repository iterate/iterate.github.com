.row
  = link_to '/', :class => 'link-with-logo' do
    = image_tag image_path('logos/iterate_logo.svg')

  -# Adds a link to skip navigation for screen-readers. Set to display:none
  = link_to 'Skip navigation', '#main', :class => 'is-hidden'

  =link_to '#', :class => 'menu-toggle' do
    = button_tag 'Meny', :class => 'ghost-button'

  %ul.main-navigation
    %li{:class => 'link-to-home'}
      = link_to 'Hjemme', '/'
    = nav_link 'Mennesker', '/people'
    = nav_link 'Om oss', '/about'
    = nav_link 'Referanser', '/cases/telenor'
    = nav_link 'Karriere', '/career'
    = nav_link 'Blogg', 'http://blog.iterate.no/'
